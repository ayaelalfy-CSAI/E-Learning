 @model List<LectureViewModel>
@{
    ViewData["Title"] = "Delete";
    Layout = "_HeaderFooterLayout";
}

<div class="container">
    <h3>Lectures: </h3>

    <!-- Display all existing lectures related to this topic -->
    <div class="list-group">
        @foreach (var lecture in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <!-- Left Side: Lecture Title and Video -->
                <div>
                    <h5>@lecture.Title</h5>
                    <video width="320" height="240" controls preload="metadata">
                        <source src="@Url.Content("~/Video/" + lecture.Video)" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>

                <!-- Right Side: Delete Button -->
                <div>
                    <a asp-controller="Lecture" asp-action="Delete" asp-route-id="@lecture.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    </div>
</div>

















